<!-- Email Capture Section -->
<div class="bg-gray-50 py-20" id="waitlist-form">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto bg-white rounded-2xl p-8 shadow-lg arc-card">
      <div class="text-center mb-8">
        <h2 class="text-3xl mb-4 font-bold gradient-text">We're Launching Soon</h2>
        <div class="w-16 h-1 gradient-bg mx-auto mb-6 rounded-full"></div>
        <p class="text-gray-700">Join our waitlist to be first in line when we open our doors. Tell us who you are, and we'll keep you updated on our launch.</p>
      </div>
      
      <%= form_with model: Lead.new, local: false, class: "space-y-6", id: "waitlist-form", data: { controller: "waitlist", action: "submit->waitlist#submit", waitlist_target: "form" } do |f| %>
        <div id="form-errors" class="bg-red-50 text-red-500 p-4 rounded-md hidden" data-waitlist-target="errors"></div>
        
        <div class="space-y-4">
          <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
            <div class="flex-1">
              <label class="block text-gray-700 font-medium mb-2">I am a:</label>
              <div class="flex space-x-4" data-waitlist-target="userType">
                <label class="inline-flex items-center">
                  <%= f.radio_button :user_type, 'brand', class: "form-radio h-5 w-5 text-[#5E5CE6] border-gray-300" %>
                  <span class="ml-2 text-gray-700">Brand/Maker</span>
                </label>
                <label class="inline-flex items-center">
                  <%= f.radio_button :user_type, 'retailer', class: "form-radio h-5 w-5 text-[#5E5CE6] border-gray-300" %>
                  <span class="ml-2 text-gray-700">Retailer</span>
                </label>
              </div>
            </div>
          </div>
          
          <div>
            <%= f.label :email, "Email Address", class: "block text-gray-700 font-medium mb-2" %>
            <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-[#5E5CE6] focus:border-[#5E5CE6] bg-white", placeholder: "you@example.com", required: true, data: { waitlist_target: "email" } %>
          </div>
          
          <div>
            <%= f.label :company_name, "Company Name (Optional)", class: "block text-gray-700 font-medium mb-2" %>
            <%= f.text_field :company_name, class: "w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-[#5E5CE6] focus:border-[#5E5CE6] bg-white", placeholder: "Your Company" %>
          </div>
        </div>
        
        <div class="pt-4">
          <%= f.submit "Join the Waitlist", class: "w-full gradient-bg text-white font-medium py-3 px-4 rounded-xl transition duration-300 arc-button", data: { waitlist_target: "submitButton" } %>
        </div>
        
        <div class="text-center text-sm text-gray-500 mt-4">
          <p>By joining, you'll receive updates about our launch and early access opportunities. We respect your inbox and will never share your information.</p>
        </div>
      <% end %>
      
