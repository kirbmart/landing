<!-- Confirmation Page Hero -->
<div class="relative bg-[#F5EFE6] overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0 opacity-20">
    <img src="/images/hero-background.jpg" alt="Natural ingredients" class="w-full h-full object-cover">
  </div>
  
  <div class="relative z-10 container mx-auto px-4 py-20 md:py-28">
    <div class="max-w-4xl mx-auto text-center">
      <div class="bg-white rounded-full h-24 w-24 flex items-center justify-center mx-auto mb-8 shadow-md">
        <svg class="h-12 w-12 text-[#9A7B4F]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h1 class="text-4xl md:text-6xl text-[#9A7B4F] mb-6 font-medium">You're on the List!</h1>
      <% if @user_type == 'brand' %>
        <p class="text-xl md:text-2xl text-[#5D4B35] mb-8 font-light">Thank you for your interest in joining our marketplace as a brand partner.</p>
      <% else %>
        <p class="text-xl md:text-2xl text-[#5D4B35] mb-8 font-light">Thank you for your interest in discovering new wholesale products for your store.</p>
      <% end %>
    </div>
  </div>
</div>

<!-- Confirmation Details -->
<div class="bg-[#FFFDF7] py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto bg-white border border-[#E8E0D5] rounded-lg p-8 shadow-sm">
      <div class="text-center mb-12">
        <h2 class="text-3xl text-[#9A7B4F] mb-4">What's Next?</h2>
        <div class="w-16 h-1 bg-[#E8D0B0] mx-auto mb-6"></div>
        <p class="text-[#5D4B35] text-lg">We've received your information and will reach out when we launch. In the meantime, follow us on social media for updates, sneak peeks, and wholesale industry insights.</p>
      </div>
      
      <!-- Social Media Section -->
      <div class="text-center mb-12">
        <h3 class="text-2xl text-[#9A7B4F] mb-6 font-medium">Stay Connected</h3>
        <div class="flex flex-col md:flex-row justify-center space-y-4 md:space-y-0 md:space-x-6">
          <a href="https://instagram.com/yourmarketplace" target="_blank" class="inline-flex items-center justify-center px-6 py-3 bg-[#9A7B4F] text-white font-medium rounded-full transition duration-300 hover:bg-[#7D5A2E] uppercase tracking-wider text-sm">
            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            Instagram
          </a>
          <a href="https://bsky.app/yourmarketplace" target="_blank" class="inline-flex items-center justify-center px-6 py-3 bg-[#9A7B4F] text-white font-medium rounded-full transition duration-300 hover:bg-[#7D5A2E] uppercase tracking-wider text-sm">
            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
            </svg>
            Bluesky
          </a>
        </div>
        <p class="text-[#9A7B4F] mt-6">Follow our journey as we build a better wholesale experience.</p>
      </div>
      
      <!-- Final Section -->
      <div class="text-center mb-8">
        <% if @user_type == 'brand' %>
          <p class="text-[#5D4B35] mb-6">We're working hard to create a wholesale marketplace that truly works for brands. We'll be in touch soon with exclusive early access details.</p>
        <% else %>
          <p class="text-[#5D4B35] mb-6">We're working hard to create a wholesale marketplace that truly works for retailers. We'll be in touch soon with exclusive early access details.</p>
        <% end %>
        <a href="<%= root_path %>" class="inline-block bg-[#9A7B4F] hover:bg-[#7D5A2E] text-white font-medium py-3 px-8 rounded-full transition duration-300 uppercase tracking-wider text-sm">Return to Home</a>
      </div>
    </div>
  </div>
</div>

<!-- Footer -->
<div class="bg-[#9A7B4F] text-white py-12">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl font-medium mb-4">Better Wholesale Is Coming. Be Part Of It First.</h2>
    <p class="text-lg mb-6 font-light">Thank you for joining our waitlist!</p>
  </div>
</div>

<script>
  // Animation for the checkmark
  document.addEventListener('DOMContentLoaded', function() {
    const checkmark = document.querySelector('.bg-white.rounded-full');
    checkmark.classList.add('animate-bounce');
    setTimeout(() => {
      checkmark.classList.remove('animate-bounce');
    }, 2000);
  });
</script> 